#!/bin/bash
set -e

eval `cat $(dirname "$0")/../conf|awk -v name="baoleiji" '{if($1==name){printf("ip=%s; user=%s; password=%s; port=%s",$2,$3,$4,$5)}}'`
if [ -z "$password" ]; then
  echo "no password of baoleiji"
  exit 1
fi
if [ -z "$port" ]; then
  port=22
fi

if [ -z "$2" ]; then
  echo "no remote machine"
  exit 1
fi
eval `cat $(dirname "$0")/../conf|awk -v name1="$2" '{if($1==name1){printf("ip1=%s; user1=%s; password1=%s; port1=%s",$2,$3,$4,$5)}}'`
if [ -z "$user1" ]; then
  echo "no user of remote machine $2"
  exit 1
fi
if [ -z "$port1" ]; then
  port1=22
fi
listen_port=${ip1//./}
listen_port=${listen_port:0:5}
sys=`uname -s`
if [ "$sys" == "Darwin" ]; then
  sed -i '' "/^\[localhost\]:${listen_port}.*/d"  ~/.ssh/known_hosts
else
  sed -i "/^\[localhost\]:${listen_port}.*/d"  ~/.ssh/known_hosts
fi

$(dirname "$0")/sshTunnel $ip1 $port1 $ip $user $password $port $listen_port
if [ $1 == "u" ]; then
  scp -rp -P $listen_port $3 $user1@127.0.0.1:$4
elif [ $1 == "d" ]; then
  scp -rp -P $listen_port $user1@127.0.0.1:$3 $4
else
  ehco "unkown action $1"
  exit 1
fi
ps -ef|grep 'ssh -Nf -L'|grep -v grep|awk '{print $2}'|xargs kill -9
